{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "moduleResolution": "node",
      "allowJs": true,
      "checkJs": true,
      "strictNullChecks": true,
      //"watch": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "./js/"
    },
    "include": [
        "./ts/*"
    ],
    "exclude": [
      "node_modules"
    ]
}